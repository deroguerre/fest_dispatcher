{% extends 'base.html.twig' %}

{% block title %}Festival{% endblock %}

{% block body %}
    <h1>Festival</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ festival.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ festival.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ festival.startDate ? festival.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ festival.endDate ? festival.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ festival.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ festival.zipcode }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ festival.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('festival_index') }}">back to list</a>

    <a href="{{ path('festival_edit', {'id': festival.id}) }}">edit</a>

    {{ include('festival/_delete_form.html.twig') }}

    <div>
        <p>Envoyer un email pour connaitre la disponibilité des bénévoles sur la période du festival</p>
    </div>
    <a class="btn btn-primary" href="{{ path('festival_email', {'id': festival.id}) }}">Préparer un email</a>
{% endblock %}
