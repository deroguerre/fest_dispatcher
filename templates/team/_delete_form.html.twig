<form style="display: inline" method="post" action="{{ path('team_delete', {'id': team.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
    <button class="btn btn-outline-danger">{% trans %}delete{% endtrans %}</button>
</form>
