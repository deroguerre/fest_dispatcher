{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1 class="h3 mb-4 text-gray-800">{% trans %}Team{% endtrans %} {{ team.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ team.description }}</td>
            </tr>
            <tr>
                <th>BackgroundColor</th>
                <td>{{ team.backgroundColor }}</td>
            </tr>
            <tr>
                <th>NeededVolunteers</th>
                <td>{{ team.neededVolunteers }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-outline-primary" href="{{ path('team_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a class="btn btn-outline-primary" href="{{ path('team_edit', {'id': team.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('team/_delete_form.html.twig') }}

{% endblock %}
