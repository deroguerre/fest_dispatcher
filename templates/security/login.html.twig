{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
    <h1>{% trans %}Login{% endtrans %}</h1>
    <form method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="_username" class="form-control" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label>{% trans %}Password{% endtrans %}</label>
            <input type="password" name="_password" class="form-control">
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-primary">
                {% trans %}Connect{% endtrans %}
            </button>
        </div>
    </form>
{% endblock %}