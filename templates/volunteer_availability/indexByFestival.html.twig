{% extends 'base.html.twig' %}

{% block title %}VolunteerAvailability index{% endblock %}

{% block body %}
    <h1>Bénévoles disponibles pour {{ current_festival.name }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Festival</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for volunteer_availability in volunteer_availabilities %}
            <tr>
                <td>{{ volunteer_availability.user.lastname }}</td>
                <td>{{ volunteer_availability.user.firstname }}</td>
                <td>{{ volunteer_availability.user.email }}</td>
                <td>{{ volunteer_availability.festival.name }}</td>
                <td>{{ volunteer_availability.startDate ? volunteer_availability.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ volunteer_availability.endDate ? volunteer_availability.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('volunteer_availability_show', {'id': volunteer_availability.id}) }}"><i class="far fa-eye"></i></a>
                    <a class="btn btn-primary" href="{{ path('volunteer_availability_edit', {'id': volunteer_availability.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('volunteer_availability_new') }}">Ajouter un bénévole</a>
{% endblock %}
